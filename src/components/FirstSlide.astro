---
import IconsSlides from "./comuns/IconsSlides.astro";
---

<script>
  import { tns } from "tiny-slider";

  var slider = tns({
    container: ".my-slider",
    items: 1,
    slideBy: "page",
    autoplay: true,
    controls: true,
    nav: false,
    autoplayButtonOutput: false,
    arrowKeys: true,
    autoplayHoverPause: true,
    speed: 300,
    mode: "gallery",
    responsive: {
      300: {
        items: 1,
      },
    },
  });

  const prev = document.querySelector(
    ".tns-controls button[data-controls='prev']"
  );
  prev.innerHTML =
    '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="white" class="w-14 h-14"><path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" /></svg>';
  const next = document.querySelector(
    ".tns-controls button[data-controls='next']"
  );
  next.innerHTML =
    '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="white" class="w-14 h-14">  <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" /></svg>';
</script>
<section id="slide1" data-header-color="black">
  <div class="slideshow">
    <ul class="my-slider">
      <li class="content">
        <img src="../public/images/1.webp" alt="" />
        <section class="caption">
          <h1>Tu mejor<br />aliado comercial</h1>
          <a href="#" class="button-slide">Ver Beneficios</a>
          <IconsSlides />
        </section>
      </li>
      <li style="">
        <img src="../public/images/2.webp" alt="" />
        <section class="caption">
          <h1>Salones físicos<br />y virtuales para tu empresa</h1>
          <a href="#" class="button-slide">Ver Ambientes</a>
          <IconsSlides />
        </section>
      </li>
      <li style="">
        <img src="../public/images/3.webp" alt="" />
        <section class="caption">
          <h1>Amplía tu<br />red de contactos</h1>
          <a href="#" class="button-slide">Ver Socios</a>
          <IconsSlides />
        </section>
      </li>
      <li style="">
        <img src="../public/images/4.webp" alt="" />
        <section class="caption">
          <h1>Beneficios exclusivos<br />con las mejores empresas</h1>
          <a href="#" class="button-slide">Ver Convenios</a>
          <IconsSlides />
        </section>
      </li>
    </ul>

    <div class="left">
      <span class="fa fa-chevron-left"></span>
    </div>
    <div class="right">
      <span class="fa fa-chevron-right"></span>
    </div>
  </div>
</section>
